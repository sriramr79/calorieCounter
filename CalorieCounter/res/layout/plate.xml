<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent" >
    
    <TextView
        android:id="@+id/tableTopText"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:background="#0000f0"
        android:textSize="20dip"
        android:text="Creating a meal for %name"
        />
    
    <LinearLayout
        android:orientation="horizontal"
        android:background="@drawable/table"
        android:layout_width="fill_parent"
        android:layout_height="150dip">
    
    	<ImageView
     	    android:id="@+id/tableFoodButton1"
     	    android:layout_marginLeft="20dip"
     	    android:layout_marginBottom="20dip"
        	android:layout_width="wrap_content"
        	android:layout_height="fill_parent"
        	android:layout_weight="0.33"
        	android:src="@drawable/milkglass"
        	android:contentDescription="@string/tableFood1Desc" />
    
    	<ImageView
     	    android:id="@+id/tableFoodButton2"
     	    android:layout_marginBottom="20dip"
        	android:layout_width="wrap_content"
        	android:layout_height="fill_parent"
        	android:layout_weight="0.33"
        	android:src="@drawable/banana"
        	android:contentDescription="@string/tableFood1Desc" />	
    	
    	<ImageView
     	    android:id="@+id/tableFoodButton3"
     	    android:layout_marginRight="20dip"
     	    android:layout_marginBottom="20dip"
        	android:layout_width="wrap_content"
        	android:layout_height="fill_parent"
        	android:layout_weight="0.33"
        	android:src="@drawable/cokecan"
        	android:contentDescription="@string/tableFood1Desc" />
   		
	</LinearLayout>
	
    <TextView
        android:id="@+id/food1Desc"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:text="@string/tableFood1Desc"/>
    <TextView
        android:id="@+id/food2Desc"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:text="@string/tableFood1Desc"/>
    <TextView
        android:id="@+id/food3Desc"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:text="@string/tableFood1Desc"/>
    <TextView
        android:id="@+id/foodTotalDesc"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:text="@string/tableTotalCalories"/>
	
    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="100dip">
        
        <LinearLayout
            android:id="@+id/scrollFood"
       		android:orientation="horizontal"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/scrollFoodButton1"
                android:layout_width="100dip"
                android:layout_height="fill_parent"
	        	android:onClick="onFoodButtonClick"
                android:contentDescription="@string/tableFood1Desc"
                android:src="@drawable/banana" />
            
            <ImageView
                android:id="@+id/scrollFoodButton2"
                android:layout_width="100dip"
                android:layout_height="fill_parent"
	        	android:onClick="onFoodButtonClick"
                android:contentDescription="@string/tableFood1Desc"
                android:src="@drawable/banana" />
               
            <ImageView
                android:id="@+id/scrollFoodButton3"
                android:layout_width="100dip"
                android:layout_height="fill_parent"
	        	android:onClick="onFoodButtonClick"
                android:contentDescription="@string/tableFood1Desc"
                android:src="@drawable/banana" />
            
            <ImageView
                android:id="@+id/scrollFoodButton4"
                android:layout_width="100dip"
                android:layout_height="fill_parent"
	        	android:onClick="onFoodButtonClick"
                android:contentDescription="@string/tableFood1Desc"
                android:src="@drawable/banana" />
    
	    	<ImageView
	     	    android:id="@+id/tableFoodButton5"
	            android:layout_width="100dip"
	        	android:layout_height="fill_parent"
	        	android:onClick="onFoodButtonClick"
	        	android:contentDescription="@string/tableFood1Desc"
	        	android:src="@drawable/banana" />	
	    	
	    	<ImageView
	     	    android:id="@+id/tableFoodButton6"
	            android:layout_width="100dip"
	        	android:layout_height="fill_parent"
	        	android:onClick="onFoodButtonClick"
	        	android:contentDescription="@string/tableFood1Desc"
	        	android:src="@drawable/banana" />
        
    	</LinearLayout>
    	
    </HorizontalScrollView>
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dip">
        
        <Button
            android:id="@+id/submitButton"
            android:layout_width="100dip"
            android:layout_marginRight="50dip"
            android:layout_marginLeft="50dip"
            android:layout_height="fill_parent"
            android:text="@string/submitButton" />
        
        <Button
            android:id="@+id/quitButton"
            android:layout_width="50dip"
            android:layout_marginRight="50dip"
            android:layout_height="fill_parent"
            android:onClick="onQuitButtonClick"
            android:text="@string/quitButton" />
        
    </LinearLayout>
	
</LinearLayout>