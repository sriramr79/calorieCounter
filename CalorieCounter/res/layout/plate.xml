<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/plateb"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tableTopText"
        android:layout_width="fill_parent"
        android:layout_height="20dip"
        android:text=""
        android:textColor="#000000"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="150dip"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/tableFoodButton1"
            android:layout_width="50dip"
            android:layout_height="fill_parent"
            android:layout_marginBottom="20dip"
            android:layout_marginLeft="20dip"
            android:layout_weight="0.33"
            android:contentDescription="@string/tableFood1Desc"
            android:onClick="onTableButton1Click" />

        <ImageView
            android:id="@+id/tableFoodButton2"
            android:layout_width="50dip"
            android:layout_height="fill_parent"
            android:layout_marginBottom="20dip"
            android:layout_weight="0.33"
            android:contentDescription="@string/tableFood1Desc"
            android:onClick="onTableButton2Click" />

        <ImageView
            android:id="@+id/tableFoodButton3"
            android:layout_width="50dip"
            android:layout_height="fill_parent"
            android:layout_marginBottom="20dip"
            android:layout_marginRight="20dip"
            android:layout_weight="0.33"
            android:contentDescription="@string/tableFood1Desc"
            android:onClick="onTableButton3Click" />
    </LinearLayout>

    <TextView
        android:id="@+id/food1Desc"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:text="@string/tableFood1Desc"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/food2Desc"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:text="@string/tableFood1Desc"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/food3Desc"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:text="@string/tableFood1Desc"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/foodTotalDesc"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:text="@string/tableTotalCalories"
        android:textColor="#000000"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/scrollFood"
        android:layout_width="fill_parent"
        android:layout_height="100dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/scrollLeftButton"
            android:layout_width="50dip"
            android:layout_height="fill_parent"
            android:layout_marginRight="20dip"
            android:contentDescription="@string/tableFood1Desc"
            android:onClick="onLeftButtonClick"
            android:src="@drawable/leftarrow" />

        <ImageView
            android:id="@+id/scrollFoodButton"
            android:layout_width="150dip"
            android:layout_height="fill_parent"
            android:layout_marginRight="20dip"
            android:contentDescription="@string/tableFood1Desc"
            android:onClick="onFoodButtonClick"
            android:src="@drawable/banana" />

        <ImageView
            android:id="@+id/scrollRightButton"
            android:layout_width="50dip"
            android:layout_height="fill_parent"
            android:contentDescription="@string/tableFood1Desc"
            android:onClick="onRightButtonClick"
            android:src="@drawable/rightarrow" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dip"
            android:layout_marginRight="50dip"
            android:background="@drawable/submit"
            android:onClick="onSubmitButtonClick"
            android:src="@drawable/submit" />

        <Button
            android:id="@+id/quitButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="50dip"
            android:background="@drawable/quit"
            android:onClick="onQuitButtonClick"
            android:src="@drawable/quit" />
    </LinearLayout>

</LinearLayout>