<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/adminDetailLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/adminName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="30dp" />

    <ScrollView
        android:id="@+id/adminScroll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/adminDetailLayout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- USERNAME -->

            <LinearLayout
                android:id="@+id/adminDetailUSN"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/adminUSNTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="@string/usnTitle" />

                <TextView
                    android:id="@+id/adminUSNField"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent" />
            </LinearLayout>

            <!-- SCORE -->

            <LinearLayout
                android:id="@+id/adminDetailScore"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/adminScoreTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="@string/scoreTitle" />

                <TextView
                    android:id="@+id/adminScoreField"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>