<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/adminDetailLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/adminName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="30dp" />

    <ScrollView
        android:id="@+id/adminScroll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/adminDetailLayout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- USERNAME -->

            <LinearLayout
                android:id="@+id/adminDetailUSN"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/adminUSNTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="@string/usnTitle"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/adminUSNField"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textSize="20dp" />
            </LinearLayout>

            <!-- SCORE -->

            <LinearLayout
                android:id="@+id/adminDetailScore"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/adminScoreTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="@string/scoreTitle"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/adminScoreField"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textSize="20dp" />
            </LinearLayout>

            <!-- NUMBER of LOGINS -->

            <LinearLayout
                android:id="@+id/adminDetailLogins"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/adminLoginsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="@string/loginsTitle"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/adminLoginsField"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textSize="20dp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#FF00FF00" />

            <!-- GAME ATTEMPTS -->

            <TextView
                android:id="@+id/adminDetailAttemptsTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/attemptsTitle"
                android:textSize="24dp" />

            <LinearLayout
                android:id="@+id/adminDetailPlateAttempts"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/adminPlateAttemptsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="@string/plateTitle"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/adminPlateAttemptsField"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/adminDetailCountAttempts"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/adminCountAttemptsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="@string/countTitle"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/adminCountAttemptsField"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/adminDetailAttemptsORP"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/adminORPAttemptsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="@string/ORPTitle"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/adminORPAttemptsField"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/adminDetailRankingAttempts"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/adminRankingAttemptsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="@string/rankingTitle"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/adminRankingAttemptsField"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textSize="20dp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#FF00FF00" />

            <!-- GAME WINS -->

            <TextView
                android:id="@+id/adminDetailWinsTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/winsTitle"
                android:textSize="24dp" />

            <LinearLayout
                android:id="@+id/adminDetailPlate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/adminPlateTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="@string/plateTitle"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/adminPlateField"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/adminDetailCount"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/adminCountTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="@string/countTitle"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/adminCountField"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/adminDetail123"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/adminORPTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="@string/ORPTitle"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/adminORPField"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/adminDetailRanking"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/adminRankingTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="@string/rankingTitle"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/adminRankingField"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>